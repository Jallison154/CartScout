# CartScout – copy to .env and set in production

# Server
PORT=4000
NODE_ENV=development

# Database (SQLite file path; use :memory: for in-memory)
DATABASE_PATH=./data/cartscout.sqlite

# JWT (use long random strings in production)
JWT_ACCESS_SECRET=your-access-secret-min-32-chars
JWT_REFRESH_SECRET=your-refresh-secret-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Mobile app – API base URL (Expo). Use your server IP when API is on another machine.
EXPO_PUBLIC_API_URL=http://localhost:4000
# Example for server on LAN: EXPO_PUBLIC_API_URL=http://192.168.10.47:4000
