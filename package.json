    "test:api": "curl -s http://localhost:4000/health || echo 'Start the server first: npm run server'",
    "install:dev": "npm install --ignore-scripts"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "react-native-web": "~0.19.13"
  }
}
