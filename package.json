{
  "name": "cartscout",
  "version": "0.1.0",
  "private": true,
  "description": "Grocery list app â€“ iOS, Android, and web. API-first, mobile-ready.",
  "workspaces": [
    "server",
    "apps/*",
    "packages/*"
  ],
  "overrides": {
    "glob": "^10.4.2"
  },
  "scripts": {
    "server": "npm run dev --workspace=server",
    "mobile": "npm run start --workspace=apps/mobile",
